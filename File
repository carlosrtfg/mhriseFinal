------ MALOOOO -----
import SwiftUI

struct MonstersView: View {
    @EnvironmentObject var monsters: MonsterModel
    @State var searchMonster: String = ""
    
    var body: some View {
        NavigationView {
            List() {
                ForEach(monsters.monsters.filter { monster in
                    searchMonster.isEmpty || monster.name.localizedCaseInsensitiveContains(searchMonster)
                }) { monster in
                    NavigationLink(destination: MonsterDetail(
                        name: monster.name,
                        imageUrl: monster.image,
                        monsterType: monster.monsterClass,
                        monsterElement: monster.element,
                        monsterAilments: monster.ailments,
                        monsterWeakestTo: monster.weakestTo,
                        habitat: monster.habitat,
                        monsterSizeBig: monster.size.bigGoldelCrown,
                        monsterSizeSmall: monster.size.smallGoldelCrown))
                    {
                        MonsterRow(monster: monster)
                    }
                }
            }
            .navigationTitle("Monsters")
            .navigationBarTitleDisplayMode(.inline)


            .searchable(
                text: $searchMonster,
                prompt: Text("Monster name")
            )
        }
    }
}

struct MonsterRow: View {
    let monster: Monster
    @ObservedObject var networkModel = NetworkModel()
    
    var body: some View {
        HStack {
            VStack(alignment: .leading) {
                Text(monster.name)
                    .font(.headline)
                    .foregroundColor(.pink)
                Text(monster.monsterClass)
                    .font(.footnote)
                    .padding(.leading, 25)
            }
            Spacer()
            networkModel.image
                .resizable()
                .frame(width: 50, height: 50)
        }
        .onAppear {
            networkModel.getImage(url: monster.image)
        }
    }
}








struct Monster_Previews: PreviewProvider {
    static var previews: some View {
        Group{
            
            MonstersView()
                .previewDisplayName("14 pro")
                .previewDevice("iPhone 14 Pro")
                .environmentObject(MonsterModel())
            
            MonstersView()
                .previewDisplayName("SE 3rd")
                .previewDevice("iPhone SE (3rd generation)")
                .environmentObject(MonsterModel())
            
            MonstersView()
                .previewDisplayName("11 pro max")
                .previewDevice("iPhone 11 Pro Max")
                .environmentObject(MonsterModel())
        }
    }
}


------BUENOOOO------

import SwiftUI

struct MonstersView: View {
    @EnvironmentObject var monsters:MonsterModel
    @State var searchMonster: String = ""
    
    var body: some View {
        NavigationStack {
            List{
                ForEach(monsters.monsters) {monsters in
                    NavigationLink(destination: MonsterDetail(
                        name: monsters.name,
                        imageUrl: monsters.image,
                        monsterType: monsters.monsterClass,
                        monsterElement: monsters.element,
                        monsterAilments: monsters.ailments,
                        monsterWeakestTo: monsters.weakestTo,
                        habitat: monsters.habitat,
                        monsterSizeBig: monsters.size.bigGoldelCrown,
                        monsterSizeSmall: monsters.size.smallGoldelCrown))
                    {
                        MonsterRow(monsters: monsters)
                    }
                }
            }
            .navigationTitle("Monsters")
            .toolbar {
                // preparacion para agregar en el boton + agregar
                // a la lista
                Button(action: {
                    
                }, label: {
                    Image(systemName: "plus")
                })
            }
        }
        .searchable(
            text: $searchMonster,
            prompt: Text("Monster name ")
        )
    }
}

struct MonsterRow: View {
    let monsters:Monster
    @ObservedObject var imagenMonster = NetworkModel()
    
    var body: some View {
        HStack {
            
            VStack(alignment: .leading) {
                
                Text("\(monsters.name)")
                    .font(.headline)
                    .foregroundColor(Color.pink)
                
                Text("\(monsters.monsterClass)")
                    .font(.footnote)
                    .padding(.leading, 25)
            }
            
            Spacer()
            
            imagenMonster.image
                .resizable()
                .frame(width: 50, height: 50)
        }
        
        .onAppear {
            imagenMonster.getImage(url: monsters.image)
        }
    }
}







struct Monster_Previews: PreviewProvider {
    static var previews: some View {
        Group{
            
            MonstersView()
                .previewDisplayName("14 pro")
                .previewDevice("iPhone 14 Pro")
                .environmentObject(MonsterModel())
            
            MonstersView()
                .previewDisplayName("SE 3rd")
                .previewDevice("iPhone SE (3rd generation)")
                .environmentObject(MonsterModel())
            
            MonstersView()
                .previewDisplayName("11 pro max")
                .previewDevice("iPhone 11 Pro Max")
                .environmentObject(MonsterModel())
        }
    }
}



